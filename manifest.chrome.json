{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "6.0.0",
    "default_locale": "en",
    "homepage_url": "https://github.com/odebroqueville/contextSearch",
    "author": "Olivier de Broqueville",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data:;"
    },
    "action": {
        "default_icon": "/icons/context-search.svg",
        "default_title": "Bookmark the active tab to Context Search"
    },
    "background": {
        "service_worker": "/scripts/chrome_service_worker.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "alarms",
        "contextMenus",
        "declarativeNetRequest",
        "scripting",
        "search",
        "storage",
        "tabs"
    ],
    "optional_permissions": [
        "bookmarks",
        "clipboardWrite",
        "downloads",
        "history",
        "nativeMessaging",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "omnibox": {
        "keyword": "cs"
    },
    "commands": {
        "launch-icons-grid": {
            "suggested_key": {
                "default": "Alt+Shift+G"
            },
            "description": "Launch the icons grid"
        },
        "open-popup": {
            "suggested_key": {
                "default": "Alt+Shift+0",
                "mac": "Alt+Shift+0"
            },
            "description": "Open the popup window"
        }
    },
    "icons": {
        "16": "icons/icon_16.png",
        "20": "icons/icon_20.png",
        "24": "icons/icon_24.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "64": "icons/icon_64.png",
        "128": "icons/icon_128.png",
        "256": "icons/icon_256.png",
        "512": "icons/icon_512.png"
    },
    "options_ui": {
        "page": "/html/options.html",
        "open_in_tab": true,
        "browser_style": true
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "exclude_matches": [
                "https://paypal.com/*"
            ],
            "js": [
                "/libs/browser-polyfill.min.js",
                "/scripts/selection.js"
            ]
        }
    ]
}